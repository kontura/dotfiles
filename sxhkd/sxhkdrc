super + Tab
  monocle

super + c
  clipmenu

super + z
  info_bar

super + d
  term "vim /home/alex/usr/TODO"

super + alt + c
  unicode_dmenu

super + w + i
  ( w=$(pfw); ignw -s $w; focus.sh next; chwb -s 0 $w; )

super + alt + j
  /home/alex/bin/background_randomizer.sh

super + Return
  term
